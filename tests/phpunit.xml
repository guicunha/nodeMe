<phpunit bootstrap="./app/Init.php" colors="true">

    <testsuite name="app">
        <direcotry>./app</direcotry>
    </testsuite>
    
    <filter>
        <whitelist>
            <directory suffix=".php">../app</directory>
            <directory suffix=".php">../vendor/conselhos</directory>
        </whitelist>
        <exclude>
            <directory suffix=".phhtml">../app/views</directory>
            <file>../app/Init.php</file>
        </exclude>
    </filter>
    
    <logging>
        <log type="coverage-html" 
             target="./log/report" 
             charset="UTF-8" yui="true" hightlight="true" 
             lowUpperBound="35" hightLowerBound="70" />
        
        <log type="testdox-html" target="./log/testdox" />
        
    </logging>   
</phpunit>